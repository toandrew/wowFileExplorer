<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/app_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_item_background"
        android:drawablePadding="10.0px"
        android:gravity="center"
        android:text="@string/app_action_info"
        android:textAppearance="@style/TextAppearance.Preference.PrimaryItem" />

    <TextView
        android:id="@+id/app_run"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_item_background"
        android:drawablePadding="10.0px"
        android:gravity="center"
        android:text="@string/app_action_run"
        android:textAppearance="@style/TextAppearance.Preference.PrimaryItem" />

    <TextView
        android:id="@+id/app_uninstall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_item_background"
        android:drawablePadding="10.0px"
        android:gravity="center"
        android:text="@string/app_action_uninstall"
        android:textAppearance="@style/TextAppearance.Preference.PrimaryItem" />

</LinearLayout>